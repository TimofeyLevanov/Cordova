<?xml version='1.0' encoding='utf-8'?>
<widget id="com.salesforce.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MyApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="">
        Levanov
    </author>
    <content src="https://www.salesforce.com/products/platform/overview/" />
    <access origin="*" />
    <allow-intent href="https://www.salesforce.com/products/platform/overview/" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res\screen\android\splash-land-hdpi.png" density="land-hdpi"/>
       <splash src="res\screen\android\splash-port-hdpi.png" density="port-hdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
     <preference name="SplashScreenDelay" value="6500" />
    <preference name="AutoHideSplashScreen" value="true" />
</widget>
